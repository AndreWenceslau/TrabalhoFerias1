
@{
    ViewBag.Title = "Index";
}

<h3 class="text-center mb-3 text-info">Lista de Estados</h3>

<div class="row">
    <div class="col-12">
        <a href="/estado/cadastro" class="btn btn-primary float-right mb-3"><i class="fas fa-plus"></i>Nova Categoria</a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <td>Nome do Estado</td>
            <td>Sigla</td>
            <td>Ação</td>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td>Nome do Estado</td>
            <td>Sigla</td>
            <td>Ação</td>
        </tr>
    </tfoot>
    <tbody>
        @foreach(Model.Estado estado in ViewBag.Estados)
        {
        <tr>
            <td>@estado.Id</td>
            <td>@estado.NomeEstado</td>
            <td>@estado.Sigla</td>
        </tr>
        }
    </tbody>
</table>

