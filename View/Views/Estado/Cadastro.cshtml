
@{
    ViewBag.Title = "Cadastro";
}

<h3 class="text-center mb-3 mt-3 text-info">Cadastro de Estado</h3>

<form action="/estado/store" method="post">
    <div class="row">
        <div class="col-12">
            <div class="form-group">

                <label for="campo-nomeEstado">Nome do Estado</label>
                <input type="text" name="nomeEstado" class="form-control" id="campo-=nomeEstado" />
            </div>
        </div>

        <div class="col-12">
            <div class="form-group">
                <label for="campo-sigla">Sigla</label>
                <input type="text" name="sigla" class="form-control" id="campo-sigla" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-success float-right"><i class="fas fa-save"></i>Salvar </button> 
        </div>
    </div>
</form>

